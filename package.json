{
  "name": "p2pt",
  "version": "1.5.1",
  "description": "P2P connections with WebTorrent trackers",
  "main": "src/node.js",
  "type": "module",
  "browser": "src/p2pt.js",
  "types": "src/p2pt.d.ts",
  "scripts": {
    "build": "npm run build:umd && npm run build:umd-tiny",
    "test-browser": "vite test",
    "test-node": "node test/*.js",
    "test:all": "npm run test-browser && npm run test-node",
    "test": "start-server-and-test 'node start-trackers.js' 5001 test:all",
    "dev": "vite"
  },
  "dependencies": {
    "bittorrent-tracker": "^10.0.12",
    "uint8-util": "^2.2.2"
  },
  "optionalDependencies": {
    "@roamhq/wrtc": "^0.9.0"
  },
  "devDependencies": {
    "standard": "^17.1.0",
    "start-server-and-test": "^2.0.0",
    "tape": "^5.6.6",
    "vite": "^7.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/subins2000/p2pt.git"
  },
  "keywords": [
    "webtorrent",
    "p2p",
    "simple-peer",
    "peer"
  ],
  "author": "subins2000",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/subins2000/p2pt/issues"
  },
  "homepage": "https://github.com/subins2000/p2pt#readme",
  "standard": {
    "ignore": [
      "dist"
    ]
  }
}
